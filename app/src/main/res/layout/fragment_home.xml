<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">
<com.scwang.smartrefresh.header.MaterialHeader
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:scaleType="fitXY"
                   android:src="@mipmap/ic_home_bg"
                   app:layout_constraintTop_toTopOf="parent"
                   tools:layout_editor_absoluteX="-27dp" />

               <TextView
                   android:id="@+id/allCoinCounts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/tv_radius_tran_bg"
                   android:paddingLeft="@dimen/dp_30"
                   android:paddingTop="@dimen/dp_5"
                   android:paddingRight="@dimen/dp_14"
                   android:paddingBottom="@dimen/dp_5"
                   android:layout_marginLeft="@dimen/dp_35"
                   android:text="0"
                   android:textColor="@color/white"
                   android:textSize="@dimen/sp_12"
                   app:layout_constraintBottom_toBottomOf="@+id/textView2"
                   app:layout_constraintStart_toStartOf="@+id/textView2"
                   app:layout_constraintTop_toTopOf="@+id/textView2"
                   app:layout_constraintVertical_bias="0.47000003" />
               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginTop="@dimen/dp_40"
                   android:background="@drawable/tv_radius_bg"
                   android:paddingLeft="@dimen/dp_9"
                   android:paddingTop="@dimen/dp_5"
                   android:paddingRight="@dimen/dp_9"
                   android:paddingBottom="@dimen/dp_5"
                   android:text="@string/totle_mines"
                   android:textColor="@color/white"
                   android:textSize="@dimen/sp_12"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />
               <com.kopernik.app.widget.AutoPollRecyclerView
                   android:id="@+id/noticeRecyclerView"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:fadingEdgeLength="40dp"
                   android:requiresFadingEdge="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:layout_marginTop="55dp"/>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/clGold"
                   app:layout_constraintTop_toBottomOf="@id/noticeRecyclerView"
                   android:layout_marginTop="0dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/gold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="87dp"
                       android:layout_marginTop="@dimen/dp_10"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       android:src="@mipmap/ic_gold"
                       />
                   <TextView
                       android:id="@+id/tvPhone"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_12"
                       android:textStyle="bold"
                       android:layout_marginTop="2dp"
                       app:layout_constraintTop_toBottomOf="@id/gold"
                       app:layout_constraintLeft_toLeftOf="@id/gold"
                       app:layout_constraintRight_toRightOf="@id/gold"
                       android:text=""/>
                   <TextView
                       android:id="@+id/tvMineType"
                       app:layout_constraintTop_toBottomOf="@id/tvPhone"
                       app:layout_constraintLeft_toLeftOf="@id/tvPhone"
                       app:layout_constraintRight_toRightOf="@id/tvPhone"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_11"
                       android:text=""/>
                   <ImageView
                       android:id="@+id/gold1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="70dp"
                       android:layout_marginTop="@dimen/dp_22"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:src="@mipmap/ic_gold"
                       />
                   <TextView
                       android:id="@+id/tvPhone1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_12"
                       android:textStyle="bold"
                       android:layout_marginTop="2dp"
                       app:layout_constraintTop_toBottomOf="@id/gold1"
                       app:layout_constraintLeft_toLeftOf="@id/gold1"
                       app:layout_constraintRight_toRightOf="@id/gold1"
                       android:text=""/>
                   <TextView
                       android:id="@+id/tvMineType1"
                       app:layout_constraintTop_toBottomOf="@id/tvPhone1"
                       app:layout_constraintLeft_toLeftOf="@id/tvPhone1"
                       app:layout_constraintRight_toRightOf="@id/tvPhone1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_11"
                       android:text=""/>
                   <ImageView
                       android:id="@+id/gold2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/dp_13"
                       app:layout_constraintTop_toBottomOf="@id/tvMineType"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:src="@mipmap/ic_gold"
                       />
                   <TextView
                       android:id="@+id/tvPhone2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_12"
                       android:textStyle="bold"
                       android:layout_marginTop="2dp"
                       app:layout_constraintTop_toBottomOf="@id/gold2"
                       app:layout_constraintLeft_toLeftOf="@id/gold2"
                       app:layout_constraintRight_toRightOf="@id/gold2"
                       android:text=""/>
                   <TextView
                       android:id="@+id/tvMineType2"
                       app:layout_constraintTop_toBottomOf="@id/tvPhone2"
                       app:layout_constraintLeft_toLeftOf="@id/tvPhone2"
                       app:layout_constraintRight_toRightOf="@id/tvPhone2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_11"
                       android:text=""/>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <ImageView
                   android:id="@+id/ivFloat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="220dp"
                   android:paddingBottom="15dp"
                   android:layout_marginRight="@dimen/dp_16"
                   android:src="@mipmap/ic_float"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_10"
                   android:text="@string/receive_UTK"
                   android:paddingTop="@dimen/dp_2"
                   android:paddingBottom="@dimen/dp_2"
                   android:paddingLeft="@dimen/dp_7"
                   android:paddingRight="@dimen/dp_7"
                   android:background="@drawable/tv_radius_tran_bg"
                   app:layout_constraintBottom_toBottomOf="@id/ivFloat"
                   app:layout_constraintLeft_toLeftOf="@id/ivFloat"
                   app:layout_constraintRight_toRightOf="@id/ivFloat"
                   android:textColor="@color/white"/>
               <TextView
                   android:id="@+id/ivFloatPoint"
                   android:layout_width="8dp"
                   android:layout_height="8dp"
                   android:layout_marginTop="@dimen/dp_8"
                   android:layout_marginRight="@dimen/dp_8"
                   app:layout_constraintTop_toTopOf="@id/ivFloat"
                   app:layout_constraintRight_toRightOf="@id/ivFloat"
                   android:background="@drawable/float_point_bg"
                   />
               <ViewFlipper
                   android:id="@+id/vfNoticeScroll"
                   android:layout_width="match_parent"
                   android:inAnimation="@anim/notice_in"
                   android:outAnimation="@anim/notice_out"
                   android:layout_height="@dimen/dp_27"
                   android:layout_marginTop="@dimen/dp_35"
                   android:background="@drawable/tv_radius_tran_bg"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginRight="@dimen/dp_15"
                   app:layout_constraintTop_toBottomOf="@+id/clGold"
                   android:paddingLeft="@dimen/dp_15"
                   android:paddingRight="@dimen/dp_5"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_gravity="center"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="@id/vfNoticeScroll"
                   app:layout_constraintBottom_toBottomOf="@id/vfNoticeScroll"
                   app:layout_constraintStart_toStartOf="@id/vfNoticeScroll"
                   android:layout_marginLeft="@dimen/dp_16"
                   android:src="@mipmap/ic_horn"/>
               <ImageView
                   android:id="@+id/banner"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:scaleType="fitXY"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginRight="@dimen/dp_15"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/vfNoticeScroll"
                   android:layout_marginTop="@dimen/dp_13"
                   android:src="@mipmap/ic_banner"/>
               <TextView
                   android:id="@+id/tvMineData"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="@dimen/dp_20"
                   app:layout_constraintTop_toBottomOf="@id/banner"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginTop="@dimen/dp_20"
                   android:textStyle="bold"
                   android:text="@string/tv_mine_data"/>
               <TextView
                   android:id="@+id/tvMineDataRight"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="@dimen/dp_12"
                   app:layout_constraintLeft_toRightOf="@+id/tvMineData"
                   app:layout_constraintBottom_toBottomOf="@+id/tvMineData"
                   android:text="@string/mine_data_right"/>
               <View
                   android:id="@+id/line3"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="20dp"
                   app:layout_constraintTop_toBottomOf="@+id/tvMineData"
                   android:background="@color/color_332852"
                   />
               <LinearLayout
                   android:id="@+id/llMineData"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   app:layout_constraintTop_toBottomOf="@+id/line3"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:gravity="center">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_14"
                          android:textColor="@color/color_AA9CCA"
                          android:text="UTDM"/>
                      <TextView
                          android:id="@+id/tvUtdm"
                          android:layout_marginTop="@dimen/dp_20"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/sp_12"
                          android:textColor="@color/white"
                          android:text="0.00"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:gravity="center">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/sp_14"
                           android:textColor="@color/color_AA9CCA"
                               android:text="UTK"/>
                       <TextView
                           android:id="@+id/tvUtk"
                           android:layout_marginTop="@dimen/dp_20"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/sp_12"
                           android:textColor="@color/white"
                           android:text="0.00"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:gravity="center">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/sp_14"
                           android:textColor="@color/color_AA9CCA"
                           android:text="UTC"/>
                       <TextView
                           android:id="@+id/tvUtc"
                           android:layout_marginTop="@dimen/dp_20"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/sp_12"
                           android:textColor="@color/white"
                           android:text="0.00"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:visibility="gone"
                       android:gravity="center">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/sp_14"
                           android:textColor="@color/color_AA9CCA"
                           android:text="UYT"/>
                       <TextView
                           android:id="@+id/tvUyt"
                           android:layout_marginTop="@dimen/dp_20"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="@dimen/sp_12"
                           android:textColor="@color/white"
                           android:text="0.00"/>
                   </LinearLayout>
               </LinearLayout>
               <TextView
                   android:id="@+id/tvRealMarket"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="@dimen/dp_20"
                   app:layout_constraintTop_toBottomOf="@id/llMineData"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginTop="30dp"
                   android:textStyle="bold"
                   android:text="@string/tv_real_m"/>
               <View
                   android:id="@+id/line"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="@dimen/dp_14"
                   app:layout_constraintTop_toBottomOf="@+id/tvRealMarket"
                   android:background="@color/color_332852"
                   />
               <TextView
                   android:id="@+id/coinName"
                   android:textSize="@dimen/sp_14"
                   android:textColor="@color/color_AA9CCA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/line"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginLeft="@dimen/dp_15"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="@string/coin_name"/>
               <TextView
                   android:id="@+id/coinPrice"
                   android:textSize="@dimen/sp_14"
                   android:textColor="@color/color_AA9CCA"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="@+id/coinName"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:text="@string/coin_price"/>
               <TextView
                   android:id="@+id/coninRiseFall"
                   android:textSize="@dimen/sp_14"
                   android:textColor="@color/color_AA9CCA"
                   app:layout_constraintTop_toTopOf="@+id/coinName"
                   app:layout_constraintRight_toRightOf="parent"
                   android:layout_marginRight="@dimen/dp_15"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/coin_rise_fall"/>
               <View
                   android:id="@+id/line1"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="@dimen/dp_14"
                   app:layout_constraintTop_toBottomOf="@+id/coinName"
                   android:background="@color/color_332852"
                   />
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/recyclerView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/line1"/>
           </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
