<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <include layout="@layout/head_layout" />

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/withdrawlAddressTip"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/desposit_address"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/eTWithdrwalAddress"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:inputType="number"
                android:textColor="@color/title_black"
                android:textColorHint="@color/hint_gray"
                android:background="@drawable/signature_edit_bg"
                app:layout_constraintTop_toBottomOf="@id/withdrawlAddressTip"
                android:minHeight="48dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/withdrawlCounts"
                app:layout_constraintTop_toBottomOf="@+id/eTWithdrwalAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/withdraw_num"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/balance_coin"
                app:layout_constraintTop_toBottomOf="@+id/eTWithdrwalAddress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/withdrawlCounts"
                app:layout_constraintBottom_toBottomOf="@+id/withdrawlCounts"
                android:layout_marginRight="@dimen/dp_28"
                android:text="@string/withdraw_num"
                android:textStyle="bold"
                android:textColor="@color/color_AA9CCA"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/eTWithdrawlCoinCounts"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:inputType="number"
                android:textColor="@color/title_black"
                android:textColorHint="@color/hint_gray"
                android:background="@drawable/signature_edit_bg"
                app:layout_constraintTop_toBottomOf="@id/withdrawlCounts"
                android:minHeight="48dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/remarkTip"
                app:layout_constraintTop_toBottomOf="@id/eTWithdrawlCoinCounts"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/title_finance_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_35" />
            <EditText
                android:id="@+id/etRemark"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:inputType="number"
                android:textColor="@color/title_black"
                android:textColorHint="@color/color_AA9CCA"
                android:background="@drawable/signature_edit_bg"
                app:layout_constraintTop_toBottomOf="@id/remarkTip"
                android:hint="@string/hint_note"
                android:minHeight="48dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/withdrawl_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFCF02"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etRemark"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="52dp"
                android:text="@string/withdrawl_tip"
                android:textSize="@dimen/dp_14"/>
            <TextView
                android:id="@+id/rulesTv"
                app:layout_constraintTop_toBottomOf="@id/withdrawl_tip"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="@string/uyt_withdrawl_rules"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="200dp" />

            <Button
                android:id="@+id/okBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_enable_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_42"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/btn_enable_text_bg"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="606dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>