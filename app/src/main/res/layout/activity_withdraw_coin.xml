<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <include layout="@layout/head_layout" />

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/title_asset_withdrawl"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csChoseCoin"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signature_edit_bg">
                <TextView
                    android:id="@+id/tvCoinType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_13"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="USDT"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_13"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:drawableRight="@mipmap/icon_arrow_right"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="@string/chose_coin_type"
                    android:textStyle="bold"
                    android:textColor="@color/color_AA9CCA"
                    android:textSize="@dimen/sp_14"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/chainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/chain_name"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/chainType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="ERC20"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/signature_edit_bg"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/withdrawlAddressTip"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:text="@string/withdrawal_address"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/eTWithdrwalAddress"
                   android:layout_width="0dp"
                   android:singleLine="true"
                   android:textSize="15sp"
                   android:maxLines="1"
                   android:textCursorDrawable="@null"
                   android:background="@null"
                   android:ellipsize="end"
                   android:inputType="text"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toLeftOf="@+id/ivScan"
                   android:textColor="@color/title_black"
                   android:textColorHint="@color/color_5D5386"
                   android:hint="@string/input_hint"
                   android:minHeight="48dp"
                   android:layout_height="wrap_content"/>
               <ImageView
                   android:id="@+id/ivScan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/dp_5"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@mipmap/icon_scan"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:background="@color/color_332852"/>
           </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/withdrawlCounts"
                app:layout_constraintTop_toBottomOf="@+id/eTWithdrwalAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:text="@string/withdrawl_num"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/eTWithdrawlCoinCounts"
                    android:layout_width="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tvWithDrawlType"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:textCursorDrawable="@null"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:textColor="@color/title_black"
                    android:textColorHint="@color/color_5D5386"
                    android:hint="@string/input_counts"
                    android:background="@null"
                    android:minHeight="48dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvWithDrawlAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/color_F4C41B"
                    android:textSize="@dimen/sp_14"
                    android:padding="@dimen/dp_5"
                    android:text="@string/all"/>
                <TextView
                    android:id="@+id/tvWithDrawlType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_AA9CCA"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="@dimen/dp_20"
                    app:layout_constraintRight_toLeftOf="@+id/tvWithDrawlAll"
                    android:textSize="@dimen/sp_16"
                    android:text="USDT"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/color_332852"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/availableUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_AA9CCA"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:text="可用"/>

            <TextView
                android:id="@+id/handleFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="@string/asset_handling_fees"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvHandlerFee"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="15sp"
                    android:text=""
                    android:textColor="@color/title_black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvWithDrawlHandlerFeeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_AA9CCA"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="@dimen/sp_16"
                    android:text="UYT_TEST"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/color_332852"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/remarkTip"
                app:layout_constraintTop_toBottomOf="@id/eTWithdrawlCoinCounts"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/title_finance_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_30" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etRemark"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:textCursorDrawable="@null"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:textColor="@color/title_black"
                    android:textColorHint="@color/color_5D5386"
                    android:background="@null"
                     app:layout_constraintTop_toTopOf="parent"
                    android:hint="@string/hint_note"
                    android:minHeight="48dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/color_332852"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/reminder_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="16dp"
                android:textColor="@color/color_AA9CCA"
                android:text="@string/reminder_tip"
                android:gravity="center"/>
            <TextView
                android:id="@+id/rulesTv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etRemark"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="@string/uyt_withdrawl_rules"
                android:textColor="@color/text_gray"
                android:textSize="12dp" />

            <Button
                android:id="@+id/okBtn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/btn_enable_bg"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/btn_enable_text_bg"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="606dp" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>