<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/dialog_radius_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/exchange_counts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mining_machine_name"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mining_machine_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="UYT"
                android:gravity="right"
                android:textSize="13dp"
                android:textColor="@color/color_AA9CCA" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/tx_title3_ll"
            app:layout_constraintTop_toBottomOf="@+id/exchange_counts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mining_machine_price"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/mining_machine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="UYT"
                android:gravity="right"
                android:textSize="13dp"
                android:textColor="@color/color_AA9CCA" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/tx_title4_ll"
            app:layout_constraintTop_toBottomOf="@+id/exchange_counts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_type"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="UYT"
                android:gravity="right"
                android:textSize="13dp"
                android:textColor="@color/color_AA9CCA" />


        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/exchange_counts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_uyt_coins"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pay_uyt_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="UYT"
                android:gravity="right"
                android:textSize="13dp"
                android:textColor="@color/color_AA9CCA" />
        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/exchange_counts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_uyt_test_coins"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pay_uyt_test_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="UYT"
                android:gravity="right"
                android:textSize="13dp"
                android:textColor="@color/color_AA9CCA" />
        </LinearLayout>
        <EditText
            android:id="@+id/password_et"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_28"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="@string/asset_trade_psw"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="numberPassword"
            android:textColor="@color/title_black"
            android:textColorHint="@color/color_665F93"
            android:background="@drawable/signature_edit_bg"
            android:minHeight="45dp"
            android:paddingEnd="35dp"
            android:paddingRight="35dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_balance_not_enough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:gravity="right"
        android:textColor="@color/color_FF0000"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_7"
        android:text="@string/balance_not_enough"
        />

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/receive_utk_btn"
            android:enabled="false"
            android:text="@string/tv_get_purchase"
            android:textColor="@color/color_5D5386"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTiming"
            app:layout_goneMarginTop="@dimen/dp_30"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:id="@+id/uyt_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="right"
            android:textColor="@color/color_A49CC2"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/uyt_balance"
            />
        <TextView
            android:id="@+id/uyt_test_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:gravity="right"
            android:textColor="@color/color_A49CC2"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_26"
            android:text="@string/uyt_test_balance"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivg_top_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/ic_purchase_top"/>
    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/llbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_purchase_close"/>
</androidx.constraintlayout.widget.ConstraintLayout>