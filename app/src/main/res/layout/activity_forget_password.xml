<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_layout_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent">

    <include
        layout="@layout/head_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       android:layout_marginTop="59dp"
        >
    <EditText
        android:id="@+id/etInput"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_46"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/icClear"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/line"
        android:hint="@string/login_input_phone_hint"
        android:inputType="phone"
        android:textColorHint="@color/color_665F93"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp_17"/>
    <ImageView
        android:id="@+id/icClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_clear"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_392F55"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        >
        <EditText
            android:id="@+id/etVerifyCode"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvCode"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/login_verify"
            android:textColorHint="@color/color_665F93"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="@dimen/sp_17"/>
        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_F4C41B"
            android:text="@string/login_send_code"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/ic_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_392F55"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/confirmBtn"
        android:text="@string/next_step"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/btn_enable_bg"
        android:textColor="@color/btn_enable_text_bg"
        android:layout_height="44dp"
        android:enabled="true"
        android:layout_marginTop="45dp"
        android:gravity="center" />
</LinearLayout>
