<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <include
        layout="@layout/head_layout"/>

    <com.allen.library.SuperTextView
        android:id="@+id/titleSpt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:sLeftTextString="可赎回余额"
        app:sLeftTextSize="@dimen/sp_14"
        app:sLeftTextColor="@color/text_gray"
        app:sRightTextString=""
        app:sRightTextSize="@dimen/sp_15"
        app:sRightTextColor="@color/title_black"
        app:sShapeSelectorNormalColor="@color/background"
        app:sShapeSelectorPressedColor="@color/background"
        app:sDividerLineType="none">
    </com.allen.library.SuperTextView>

    <include
        android:id="@+id/input1"
        layout="@layout/layout_common_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <include
        android:id="@+id/input2"
        layout="@layout/layout_common_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:text="@string/next_step"
        android:layout_width="match_parent"
        android:background="@drawable/btn_enable_bg"
        android:textColor="@color/btn_enable_text_bg"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:id="@+id/okBtn"
        android:gravity="center" />

</LinearLayout>
