<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorAccent">
    <include
        layout="@layout/head_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/real_name_tip"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="25dp"
        >
        <EditText
            android:id="@+id/etInput"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/icClear"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/line"
            android:hint="@string/intput_name"
            android:textColorHint="@color/color_665F93"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_17"/>
        <ImageView
            android:id="@+id/icClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/icEye"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/ic_clear"/>
        <ImageView
            android:id="@+id/icEye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/ic_back"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_392F55"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/icEye1"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/intput_id_card"
            android:textColorHint="@color/color_665F93"
            android:textCursorDrawable="@null"
            android:textStyle="bold"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_17"/>
        <ImageView
            android:id="@+id/icClear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/icEye1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/ic_clear"/>
        <ImageView
            android:id="@+id/icEye1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_13"
            android:src="@mipmap/ic_back"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_392F55"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authentic_tip"
        android:textColor="@color/color_FFCF32"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:textSize="@dimen/sp_12"/>
    <Button
        android:id="@+id/confirmBtn"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/btn_enable_bg"
        android:textColor="@color/btn_enable_text_bg"
        android:layout_height="44dp"
        android:enabled="false"
        android:layout_marginTop="@dimen/dp_38"
        android:gravity="center" />
</LinearLayout>
