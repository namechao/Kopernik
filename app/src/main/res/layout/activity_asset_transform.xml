<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.asset.AssetTransformActivty">
<include
    android:id="@+id/title"
    layout="@layout/head_layout"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/withdrawNum"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/text_gray999"
        android:textSize="@dimen/dp_15"
        android:text="@string/withdraw_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/passwordEt"
        app:layout_constraintTop_toBottomOf="@id/withdrawNum"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/dp_15"
        android:textCursorDrawable="@null"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:inputType="numberDecimal"
        android:textColor="@color/title_black"
        android:textColorHint="@color/hint_gray"
        android:background="@drawable/signature_edit_bg"
        android:minHeight="45dp"
        android:paddingEnd="35dp"
        android:paddingRight="35dp"
        android:layout_height="wrap_content"/>
    <TextView
       android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        app:layout_constraintTop_toBottomOf="@+id/passwordEt"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/asset_text_gray"
        android:id="@+id/withdrawTip"
        android:text=""
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/confirm"
        android:layout_width="match_parent"
        android:background="@drawable/btn_enable_bg"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_39"
        android:textColor="@color/btn_enable_text_bg"
        android:enabled="false"
        android:id="@+id/okBtn"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>