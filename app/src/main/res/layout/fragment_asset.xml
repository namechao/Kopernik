<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_asset_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/asset_head_bg"
        android:minHeight="110dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/userIv"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingStart="@dimen/dp_9"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:src="@mipmap/icon_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/eyeCb"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@drawable/ic_asset_show_selector"
            android:button="@null"
            android:checked="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_asset_sum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/title_asset_sum"
            android:textColor="@color/text_gray_asset"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userIv" />

        <TextView
            android:id="@+id/assetSumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0.00000000"
            android:textColor="@color/bg_white"
            android:textSize="30sp"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_asset_sum_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_asset_sum_title" />

        <TextView
            android:id="@+id/withdrawSpb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/extract"
            android:textColor="@color/asset_fg_status"
            android:background="@drawable/withdrawal_recom_bg"
            android:textSize="14dp"
            android:paddingLeft="@dimen/dp_18"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/assetSumTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_asset_sum_title"
            app:layout_constraintVertical_bias="0.20999998" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
