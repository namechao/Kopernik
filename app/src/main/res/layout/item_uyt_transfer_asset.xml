<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_layout_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccent"
  android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_weight="1"
        android:text="充值"
        android:textStyle="bold"
        android:textColor="@color/title_black"
        android:textSize="@dimen/sp_15" />

    <com.allen.library.SuperTextView
        android:id="@+id/tx_hash_spt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:sLeftViewMarginLeft="0dp"
        app:sLeftViewGravity="left_center"
        app:sRightViewMarginLeft="@dimen/dp_10"
        app:sLeftTopTextString="@string/title_deal_hash"
        app:sLeftTopTextSize="@dimen/sp_12"
        app:sLeftTopTextColor="@color/color_AA9CCA"
        app:sLeftTextString="@string/title_deal_hash"
        app:sLeftTextSize="@dimen/sp_14"
        app:sLeftTextColor="@color/white"
        app:sShapeCornersRadius="12dp"
        app:sRightIconRes="@mipmap/ic_copy"
        app:sShapeSelectorNormalColor="@color/colorAccent"
        app:sUseShape="true"
        app:sUseRipple="false">
    </com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/recharge_address_spt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:sLeftViewMarginLeft="0dp"
        app:sLeftViewGravity="left_center"
        app:sLeftTopTextString="@string/asset_other_id"
        app:sLeftTopTextSize="@dimen/sp_12"
        app:sLeftTopTextColor="@color/color_AA9CCA"
        app:sLeftTextSize="@dimen/sp_14"
        app:sLeftLines="1"
        app:sLeftTextColor="@color/white"
        app:sLeftTextString="dfs"
        app:sShapeCornersRadius="12dp"
        app:sRightTopTextString=" "
        app:sRightIconRes="@mipmap/ic_copy"
        app:sShapeSelectorNormalColor="@color/colorAccent"
        app:sUseShape="true"
        app:sUseRipple="false">
    </com.allen.library.SuperTextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.allen.library.SuperTextView
            android:id="@+id/amount_spt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sLeftViewMarginLeft="0dp"
            app:sLeftViewGravity="left_center"
            app:sLeftTopTextString="@string/title_vote_his_num"
            app:sLeftTopTextSize="@dimen/sp_12"
            app:sLeftTopTextColor="@color/color_AA9CCA"
            app:sLeftTextString="@string/title_deal_hash"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextColor="@color/white"
            app:sShapeCornersRadius="12dp"
            app:sShapeSelectorNormalColor="@color/colorAccent"
            app:sUseShape="true"
            app:sUseRipple="false">
        </com.allen.library.SuperTextView>

        <com.allen.library.SuperTextView
            android:id="@+id/status_spt"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:sLeftViewMarginLeft="0dp"
            app:sLeftViewGravity="left_center"
            app:sLeftTopTextString="@string/title_finance_state"
            app:sLeftTopTextSize="@dimen/sp_12"
            app:sLeftTopTextColor="@color/color_AA9CCA"
            app:sLeftTextString="@string/title_deal_hash"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextColor="@color/white"
            app:sShapeCornersRadius="12dp"
            app:sShapeSelectorNormalColor="@color/colorAccent"
            app:sUseShape="true"
            app:sUseRipple="false">
        </com.allen.library.SuperTextView>
    </LinearLayout>
    <com.allen.library.SuperTextView
        android:id="@+id/time_spt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_20"
        app:sLeftViewMarginLeft="0dp"
        app:sLeftViewGravity="left_center"
        app:sLeftTopTextString="@string/title_vote_his_time"
        app:sLeftTopTextSize="@dimen/sp_12"
        app:sLeftTopTextColor="@color/color_AA9CCA"
        app:sLeftTextString="@string/title_deal_hash"
        app:sLeftTextSize="@dimen/sp_14"
        app:sLeftTextColor="@color/white"
        app:sShapeCornersRadius="12dp"
        app:sShapeSelectorNormalColor="@color/colorAccent"
        app:sUseShape="true"
        app:sUseRipple="false">
    </com.allen.library.SuperTextView>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_332852"/>

</LinearLayout>
