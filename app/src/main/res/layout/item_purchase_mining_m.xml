<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_mining_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="28dp"
    android:src="@mipmap/logo"/>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/iv_mining_type"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@id/tv_purchase"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_marginLeft="@dimen/dp_30"
      android:layout_marginRight="15dp"
      android:orientation="vertical">
      <TextView
          android:id="@+id/tv_mining_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_FFCF32"
          android:textSize="@dimen/sp_14"
          android:textStyle="bold"
          android:text="体验矿机"/>
      <TextView
          android:id="@+id/tv_mining_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_A49CC2"
          android:textSize="@dimen/sp_12"
          android:layout_marginTop="5dp"
          android:text="矿机价格"/>
      <TextView
          android:id="@+id/tv_mining_speed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_A49CC2"
          android:textSize="@dimen/sp_12"
          android:layout_marginTop="5dp"
          android:text="挖矿速度"/>
      <TextView
          android:id="@+id/tv_wave_counts"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_A49CC2"
          android:textSize="@dimen/sp_12"
          android:layout_marginTop="5dp"
          android:text="定波数:"/>
  </LinearLayout>
    <TextView
        android:id="@+id/tv_purchase"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_11"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/btn_enable_text_bg"
        android:textSize="@dimen/sp_12"
        android:background="@drawable/btn_enable_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:text="@string/button_purchase"/>
    <View
        android:id="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_332852"/>
</androidx.constraintlayout.widget.ConstraintLayout>