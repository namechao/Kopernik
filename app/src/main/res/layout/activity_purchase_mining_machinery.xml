<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/head_layout"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                android:paddingBottom="@dimen/dp_25"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/invite_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/dp_26"
                    android:textStyle="bold"
                    android:text="@string/purchase_mm_tip"/>
                <TextView
                    android:id="@+id/tvInviteF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/dp_26"
                    android:textStyle="bold"
                    android:text="@string/purchase_mm_tip1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mm_1"/>
                        <TextView
                            android:text="@string/ic_mm_tip1"
                            android:textSize="12dp"
                            android:textColor="@color/color_A49CC2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mm_2"/>
                        <TextView
                            android:text="@string/ic_mm_tip2"
                            android:textSize="12dp"
                            android:textColor="@color/color_A49CC2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_mm_3"/>
                        <TextView
                            android:text="@string/ic_mm_tip3"
                            android:textSize="12dp"
                            android:textColor="@color/color_A49CC2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_mm_4"/>
                        <TextView
                            android:text="@string/ic_mm_tip4"
                            android:textSize="12dp"
                            android:textColor="@color/color_A49CC2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/llTab"
                    android:background="@color/color_332852"/>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/ivBg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:id="@+id/llTab"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:text="@string/purchase_mm"
                            android:paddingTop="@dimen/dp_20"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/sp_14"
                            android:textColor="@color/color_ffcf32"/>
                        <View
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="2dp"
                            android:background="@color/color_ffcf32"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_332852"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:paddingTop="@dimen/dp_20"
                            android:paddingBottom="@dimen/sp_14"
                            android:textStyle="bold"
                            android:text="@string/runtime_mm"
                            android:textColor="@color/white"/>
                        <View
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_332852"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:paddingTop="@dimen/dp_20"
                            android:paddingBottom="@dimen/sp_14"
                            android:textStyle="bold"
                            android:text="@string/out_time_mm"
                            android:textColor="@color/white"/>
                        <View
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/llTab"
                    android:background="@color/color_332852"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerView1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>