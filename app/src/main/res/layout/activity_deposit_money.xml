<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        layout="@layout/head_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qrcodeIv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:background="@color/title_black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/addressTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:textSize="12dp"
                android:textColor="@color/address_text"
                android:text="647378947893hkjhkjhj"
                android:gravity="center"/>

            <include
                android:id="@+id/copyLL"
                layout="@layout/layout_copy"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="14dp"
                android:textColor="@color/text_gray"
                android:text="@string/title_recharge_title" />

            <TextView
                android:id="@+id/rulesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:textColor="@color/text_gray"
                android:lineSpacingExtra="3dp"
                android:text="@string/btc_recharge_rules" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
