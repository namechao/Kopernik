<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/head_layout"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_7"
                    android:src="@mipmap/ic_googl_verify"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_line1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_5D5386"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_line2"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_42"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_reset_verified"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_reset_verified1"
                    android:textColor="@color/color_5D5386"
                    android:textSize="@dimen/sp_12" />
                <EditText
                    android:id="@+id/etInputLoginPsw"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginTop="@dimen/dp_32"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    android:textColor="@color/white"
                    android:hint="@string/input_login_password_hint"
                    android:inputType="textPassword"
                    android:textColorHint="@color/color_AA9CCA"
                    android:background="@drawable/google_code_left"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_14"/>

               <LinearLayout
                   android:layout_marginLeft="55dp"
                   android:layout_marginRight="55dp"
                   android:layout_marginTop="@dimen/dp_15"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/google_code_left"
                   android:gravity="center"
                   android:orientation="horizontal">
                   <EditText
                       android:id="@+id/etInputCode"
                       android:layout_height="@dimen/dp_46"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:paddingLeft="@dimen/dp_14"
                       android:paddingRight="@dimen/dp_14"
                       android:textColor="@color/white"
                       android:hint="@string/re_input_code"
                       android:inputType="textPassword"
                       android:textColorHint="@color/color_AA9CCA"
                       android:background="@drawable/google_code_left"
                       android:textCursorDrawable="@null"
                       android:textSize="@dimen/sp_14"/>
                   <View
                       android:layout_width="@dimen/dp_1"
                       android:layout_height="16dp"
                       android:background="@color/color_432F70"/>
                   <TextView
                       android:id="@+id/sendCode"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                        android:text="@string/send_code"
                       android:paddingLeft="@dimen/dp_20"
                       android:paddingRight="@dimen/dp_20"
                       android:gravity="center"
                       android:textSize="@dimen/sp_14"
                       android:textColor="@color/color_F4C41B"
                       />
               </LinearLayout>
            </LinearLayout>

            <Button
                android:text="@string/submit"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:background="@drawable/btn_enable_bg"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="44dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="@dimen/dp_60"
                android:textColor="@color/btn_enable_text_bg"
                android:enabled="true"
                android:id="@+id/okBtn"
                android:gravity="center" />
        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>