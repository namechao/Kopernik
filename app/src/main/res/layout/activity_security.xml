<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/head_layout"/>

    <com.allen.library.SuperTextView
        android:id="@+id/modifyNickSpt"
        android:layout_width="match_parent"
        app:sBackgroundDrawableRes="@color/white"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/title_modify_nick"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sDividerLineHeight="1dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sUseRipple="true">
    </com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/modifyPassSpt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/title_modify_pass"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sDividerLineHeight="1dp"
        app:sUseRipple="true">
    </com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/exportWordsSpt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sBackgroundDrawableRes="@color/white"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/title_modify_export_words"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sDividerLineHeight="1dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sUseRipple="true">
    </com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/fingerprintSpt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/use_fingerprint"
        app:sRightViewType="checkbox"
        app:sRightCheckBoxRes="@drawable/switch_bg"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sDividerLineHeight="1dp"
        app:sUseRipple="true">
    </com.allen.library.SuperTextView>

</LinearLayout>