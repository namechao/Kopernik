<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_mining_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="28dp"
        android:src="@mipmap/logo"/>
    <TextView
        android:id="@+id/tv_mining_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FFCF32"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_mining_type"
        android:text="体验矿机"/>
    <LinearLayout
        android:id="@+id/miningl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_mining_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_mining_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/miningr"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mining_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A49CC2"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="5dp"
            android:text="矿机价格"/>
        <TextView
            android:id="@+id/tv_mining_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A49CC2"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="5dp"
            android:text="挖矿速度"/>
        <TextView
            android:id="@+id/tv_wave_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_A49CC2"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="5dp"
            android:text="定波数:"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/miningr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/miningl">

        <TextView
            android:id="@+id/tv_mining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/08/01 20:35"
            android:textColor="@color/color_A49CC2"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_mining_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="689.3"
            android:textColor="@color/color_A49CC2"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_update_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(每日更新一次)"
            android:textColor="@color/color_A49CC2"
            android:textSize="@dimen/sp_12" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginTop="5dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bg"
            android:layout_width="85dp"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/tv_precent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/color_FFCF32"
            android:text="18%"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_332852"/>
</androidx.constraintlayout.widget.ConstraintLayout>