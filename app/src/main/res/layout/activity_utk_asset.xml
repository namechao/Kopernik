<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.scwang.smartrefresh.header.MaterialHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivBg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/asset_top_bg"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/asset_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="@string/asset_utk_balance"/>
        <TextView
            android:id="@+id/assetTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/black"
            android:text="1,78451.55"
            app:layout_constraintTop_toBottomOf="@id/asset_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="6dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/color_ffcf32"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_60"
            app:layout_goneMarginTop="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18"
            android:drawableLeft="@mipmap/ic_transfer"
            android:background="@drawable/withdrawal_recom_bg"
            android:drawablePadding="3dp"
            android:text="@string/asset_tansfer"/>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/ivBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/llTab"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/asset_receive_record"
                    android:paddingTop="@dimen/dp_20"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/sp_14"
                    android:textColor="@color/color_ffcf32"/>
                <View
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="2dp"
                    android:background="@color/color_ffcf32"/>
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/color_332852"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/sp_14"
                    android:textStyle="bold"
                    android:text="@string/asset_transfer_record"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="2dp"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/llTab"
            android:background="@color/color_332852"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:visibility="gone"
            />
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
