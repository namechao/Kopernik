<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:background="@drawable/dialog_signature_bg">


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_asset_withdraw"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/icon_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="@dimen/dp_5"
        android:src="@drawable/icon_close"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_tv" />

    <ImageView
        android:id="@+id/use_fingerprint_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/fingerprint_icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_tv" />

    <TextView
        android:id="@+id/use_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_password"
        android:textColor="@color/input_pwd_text"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_tv" />

    <View
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_202020" />

    <LinearLayout
        android:id="@+id/tx_title1_ll"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_title1_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_address"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="节点名称"
            android:gravity="right"
            android:textSize="12dp"
            android:textColor="@color/text_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tx_title2_ll"
        app:layout_constraintTop_toBottomOf="@+id/tx_title1_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_title2_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdrawal_number"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="节点费用"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="@color/title_black" />

        <TextView
            android:id="@+id/tx_desc2_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="@color/text_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tx_title3_ll"
        app:layout_constraintTop_toBottomOf="@+id/tx_title2_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_title3_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estimated_miner_fee"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="节点费用"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tx_desc3_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UYT"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/text_gray" />

    </LinearLayout>

    <EditText
        android:id="@+id/password_et"
        app:layout_constraintTop_toBottomOf="@+id/tx_title3_ll"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_48"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:hint="@string/input_password"
        android:singleLine="true"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:textColor="@color/title_black"
        android:textColorHint="@color/hint_gray"
        android:background="@drawable/signature_edit_bg"
        android:minHeight="45dp"
        android:paddingEnd="35dp"
        android:paddingRight="35dp"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/confirm"
        app:layout_constraintTop_toBottomOf="@+id/password_et"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/btn_enable_bg"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="@dimen/dp_35"
        android:textColor="@color/btn_enable_text_bg"
        android:enabled="false"
        android:id="@+id/ok"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
