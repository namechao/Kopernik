<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_layout" />

    <com.allen.library.SuperTextView
        android:id="@+id/titleSpt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:sLeftTextString="@string/balance_of2"
        app:sLeftTextSize="@dimen/sp_15"
        app:sLeftViewMarginLeft="0dp"
        app:sLeftTextColor="@color/text_gray999"
        app:sRightTextSize="@dimen/sp_15"
        app:sRightTextColor="@color/title_black"
        app:sDividerLineType="none"
        app:sShapeSelectorNormalColor="@color/white"
        app:sShapeSelectorPressedColor="@color/white"
        app:sUseShape="true"></com.allen.library.SuperTextView>

    <include
        android:id="@+id/input1LL"
        layout="@layout/layout_common_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15" />

    <include
        android:id="@+id/input2LL"
        layout="@layout/layout_common_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15" />

    <include
        android:id="@+id/input3LL"
        layout="@layout/layout_common_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15" />

    <Button
        android:text="@string/confirm_ok"
        android:layout_width="match_parent"
        android:background="@drawable/btn_enable_bg"
        android:layout_height="44dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/btn_enable_text_bg"
        android:enabled="false"
        android:id="@+id/confirm"
        android:gravity="center" />
</LinearLayout>