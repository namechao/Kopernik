<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/invite_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_AA9CCA"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="4561313"
        />
    <TextView
        android:id="@+id/invite_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一级"
        android:textColor="@color/color_AA9CCA"
        app:layout_constraintTop_toTopOf="@+id/invite_uid"
        app:layout_constraintBottom_toBottomOf="@+id/invite_uid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/invite_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20120318"
        app:layout_constraintTop_toTopOf="@+id/invite_uid"
        app:layout_constraintBottom_toBottomOf="@+id/invite_uid"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/color_AA9CCA"
        android:textSize="@dimen/sp_14"
        />
    <View
        android:id="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_332852"/>
</androidx.constraintlayout.widget.ConstraintLayout>