<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/exit_alert_bg"
    app:layout_constraintCircleRadius="10dp"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_22"
        android:gravity="center"
        android:text="@string/is_exit_login"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="#3F3F3F" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.allen.library.SuperButton
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/color_007AFF"
            android:textSize="16sp"
            app:sCornersBottomLeftRadius="15dp"
            app:sSelectorNormalColor="@color/color_F8F8F8"
            app:sSelectorPressedColor="@color/color_F8F8F8"
            app:sUseSelector="true" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.1dp"
            android:layout_height="43dp"
            android:background="#3F3F3F" />

        <com.allen.library.SuperButton
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:gravity="center"
            app:sCornersBottomRightRadius="@dimen/dp_15"
            android:textColor="@color/color_007AFF"
            android:textSize="16sp"
            app:sSelectorNormalColor="@color/color_F8F8F8"
            app:sSelectorPressedColor="@color/color_F8F8F8"
            app:sUseSelector="true"
            android:text="@string/confirm"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>