<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/head_layout"/>

    <com.allen.library.SuperTextView
        android:id="@+id/languageSpt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/choose_language"
        app:sRightTextString="中文"
        app:sRightTextSize="14dp"
        app:sRightTextColor="@color/text_gray"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sDividerLineHeight="1dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sBackgroundDrawableRes="@color/bg_white"
        app:sLeftViewMarginLeft="@dimen/dp_15"
        app:sRightViewMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginRight="@dimen/dp_15"
        app:sUseRipple="true"></com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/nodeSetting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/node_setting"
        app:sRightTextSize="14dp"
        app:sRightTextColor="@color/text_gray"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sDividerLineHeight="1dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sBackgroundDrawableRes="@color/bg_white"
        app:sLeftViewMarginLeft="@dimen/dp_15"
        app:sRightViewMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginRight="@dimen/dp_15"
        app:sUseRipple="true"></com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/contactSpt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/title_modify_contact"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sDividerLineHeight="1dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sBackgroundDrawableRes="@color/bg_white"
        app:sLeftViewMarginLeft="@dimen/dp_15"
        app:sRightViewMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginRight="@dimen/dp_15"
        app:sUseRipple="true"></com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:id="@+id/modifyNodeLogoSpt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/title_change_node_icon"
        app:sRightIconRes="@mipmap/icon_arrow"
        app:sRightIconWidth="10dp"
        app:sRightIconHeight="10dp"
        app:sDividerLineType="bottom"
        app:sDividerLineColor="@color/dialog_line"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sBackgroundDrawableRes="@color/bg_white"
        app:sLeftViewMarginLeft="@dimen/dp_15"
        app:sRightViewMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginRight="@dimen/dp_15"
        app:sUseRipple="true"></com.allen.library.SuperTextView>

    <com.allen.library.SuperTextView
        android:visibility="gone"
        android:id="@+id/skinSpt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sShapeSelectorNormalColor="@color/bg_white"
        app:sShapeSelectorPressedColor="@color/security_btn_press"
        app:sLeftTextColor="@color/security_title"
        app:sLeftTextSize="15dp"
        app:sLeftTextString="@string/night_mode"
        app:sRightViewType="checkbox"
        app:sRightCheckBoxRes="@drawable/skin_switch_bg"
        app:sLeftViewMarginLeft="@dimen/dp_15"
        app:sRightViewMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginLeft="@dimen/dp_15"
        app:sBottomDividerLineMarginRight="@dimen/dp_15"
        app:sDividerLineType="none"></com.allen.library.SuperTextView>

</LinearLayout>