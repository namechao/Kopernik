<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <com.allen.library.SuperTextView
            android:id="@+id/contact_name_spt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:sLeftViewMarginLeft="0dp"
            app:sLeftViewGravity="left_center"
            app:sLeftTopTextString="@string/add_contact_name1"
            app:sLeftTopTextSize="@dimen/sp_12"
            app:sLeftTopTextColor="@color/text_gray"
            app:sLeftTextString="推选"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextColor="@color/title_black"
            app:sShapeCornersRadius="12dp"
            app:sShapeSelectorNormalColor="@color/bg_white"
            app:sShapeSelectorPressedColor="@color/bg_white"
            app:sUseShape="true"
            app:sUseRipple="false">
        </com.allen.library.SuperTextView>

        <com.allen.library.SuperTextView
            android:id="@+id/chain_spt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:sLeftViewMarginLeft="0dp"
            app:sLeftViewGravity="left_center"
            app:sLeftTopTextString="@string/chain"
            app:sLeftTopTextSize="@dimen/sp_12"
            app:sLeftTopTextColor="@color/text_gray"
            app:sLeftTextString="推选"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextColor="@color/title_black"
            app:sShapeCornersRadius="12dp"
            app:sShapeSelectorNormalColor="@color/bg_white"
            app:sShapeSelectorPressedColor="@color/bg_white"
            app:sUseShape="true"
            app:sUseRipple="false">
        </com.allen.library.SuperTextView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/address"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/text_gray"
        android:layout_marginTop="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/contact_address_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/address"
            android:textSize="@dimen/dp_14"
            android:layout_gravity="center"
            android:textColor="@color/title_black" />

        <ImageView
            android:id="@+id/copy_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:src="@mipmap/icon_copy"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dns_view_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="@dimen/dp_20">

        <com.allen.library.SuperButton
            android:id="@+id/modify_spb"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/title_black"
            android:textSize="@dimen/sp_12"
            android:text="@string/modify"
            app:sUseSelector="true"
            app:sStrokeWidth="1dp"
            app:sStrokeColor="@color/contact_item_border"
            app:sSelectorNormalColor="@color/bg_white"
            app:sSelectorPressedColor="@color/security_btn_press"
            app:sCornersRadius="5dp" />

        <com.allen.library.SuperButton
            android:id="@+id/del_spb"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/title_black"
            android:textSize="@dimen/sp_12"
            android:text="@string/del"
            app:sUseSelector="true"
            app:sStrokeWidth="1dp"
            app:sStrokeColor="@color/contact_item_border"
            app:sSelectorNormalColor="@color/bg_white"
            app:sSelectorPressedColor="@color/security_btn_press"
            app:sCornersRadius="5dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/btn_disable" />
</LinearLayout>