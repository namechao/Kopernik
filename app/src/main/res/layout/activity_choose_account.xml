<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_user_select"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="145dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/icon_user_select_logo"
        android:id="@+id/iv_icon"/>

    <LinearLayout
        android:id="@+id/importAccount"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:background="@mipmap/import_account_icon">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/import_account_icon2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/import_account"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/newAccount"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:background="@mipmap/import_account_icon">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/new_account_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_account"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:text="@string/user_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userSkip"
        android:textColor="@color/skip"
        android:layout_marginTop="40dp" />

</LinearLayout>
