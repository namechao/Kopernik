<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login_bg"
    android:orientation="vertical">
   <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:textSize="26sp"
       android:textColor="@color/white"
       android:layout_marginTop="115dp"
       android:layout_marginLeft="30dp"
       android:text="Helloï¼Œ"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_30"
    android:orientation="horizontal">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/login_welcome"
      android:textSize="@dimen/dp_24"
      android:textColor="@color/white"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/dp_26"
      android:textColor="@color/white"
      android:text="Kopernik Network"/>
</LinearLayout>
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/dp_30"
     android:layout_marginLeft="@dimen/dp_30"
     android:orientation="horizontal">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/sp_16"
             android:text="@string/login_phone"
             android:textColor="@color/white"/>
     <view
         android:layout_width="20dp"
         android:layout_height="2dp"
         android:color="@color/white"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/sp_16"
             android:text="@string/login_phone"
             android:textColor="@color/white"/>
         <view
             android:layout_width="20dp"
             android:layout_height="2dp"
             android:color="@color/white"/>
     </LinearLayout>
 </LinearLayout>
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/dp_30"
     android:layout_marginRight="@dimen/dp_30"
     android:layout_marginTop="@dimen/dp_15"
     >
     <TextView
         android:id="@+id/tvPhoneHead"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_marginTop="@dimen/dp_5"
         android:layout_marginBottom="@dimen/dp_5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/sp_17"
         android:textColor="@color/white"
         android:paddingTop="@dimen/dp_10"
         android:paddingBottom="@dimen/dp_10"
         android:paddingRight="@dimen/dp_10"
         android:text="+86"/>
     <View
         app:layout_constraintTop_toTopOf="@id/tvPhoneHead"
         app:layout_constraintBottom_toBottomOf="@id/tvPhoneHead"
         app:layout_constraintLeft_toRightOf="@id/tvPhoneHead"
         android:layout_marginRight="@dimen/dp_15"
         app:layout_constraintRight_toLeftOf="@+id/etInput"
         android:id="@+id/line"
         android:layout_width="1dp"
         android:layout_height="16dp"
         android:background="@color/color_E9E9E9"/>
     <EditText
         android:id="@+id/etInput"
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintRight_toLeftOf="@+id/icClear"
         android:textColor="@color/white"
         app:layout_constraintLeft_toRightOf="@+id/line"
         android:hint="@string/login_input_phone_hint"
         android:textColorHint="@color/color_665F93"
         android:background="@null"
         android:textSize="@dimen/sp_17"/>
     <ImageView
         android:id="@+id/icClear"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:src="@mipmap/ic_back"/>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/color_392F55"/>
 </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/icEye"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="@string/login_input_password_hint"
            android:textColorHint="@color/color_665F93"
            android:background="@null"
            android:textSize="@dimen/sp_17"/>
        <ImageView
            android:id="@+id/icEye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/ic_back"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_392F55"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/confirmBtn"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_enable_bg"
        android:textColor="@color/btn_enable_text_bg"
        android:layout_height="44dp"
        android:enabled="false"
        android:layout_marginTop="25dp"
        android:gravity="center" />
</LinearLayout>
