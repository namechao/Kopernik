<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/status_layout_manager_iv_status_error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="出错" />

    <TextView
        android:id="@+id/status_layout_manager_tv_status_error_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="出错"
        android:textColor="@color/empty_data"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/status_layout_manager_bt_status_error_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/retry"
        android:textColor="@color/text_blue"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>
