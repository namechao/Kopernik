<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/head_layout" />

    <include
        android:id="@+id/password"
        layout="@layout/layout_common_edit"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/passwordAgain"
        layout="@layout/layout_common_edit"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pwdRules1"
        app:layout_constraintTop_toBottomOf="@id/passwordAgain"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/pwd_abc"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pwdRules2"
        app:layout_constraintTop_toBottomOf="@id/pwdRules1"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/pwd_number"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="3dp"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pwdRules3"
        app:layout_constraintTop_toBottomOf="@id/pwdRules2"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/pwd_abc_both"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="3dp"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pwdRules4"
        app:layout_constraintTop_toBottomOf="@id/pwdRules3"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@string/pwd_length"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="3dp"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/confirmBtn"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_enable_bg"
        android:textColor="@color/btn_enable_text_bg"
        android:layout_height="44dp"
        android:enabled="false"
        android:layout_marginTop="25dp"

        android:gravity="center" />


</androidx.constraintlayout.widget.ConstraintLayout>