<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/head_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_7"
                    android:src="@mipmap/ic_googl_verify"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_line1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_5D5386"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_line2"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_39"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_5D5386"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/google_verify_code_top"/>




    <FrameLayout

        android:layout_marginTop="@dimen/dp_48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvCode1"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_marginRight="9dp"
                android:layout_marginLeft="30dp"
                android:text="1"
                android:textColor="@color/color_FFCF02"
                android:background="@drawable/google_input_code_bg"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCode2"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_marginRight="9dp"
                android:text="2"
                android:textColor="@color/color_FFCF02"
                android:textSize="18sp"
                android:background="@drawable/google_input_code_bg"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCode3"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:layout_marginRight="9dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_FFCF02"
                android:background="@drawable/google_input_code_bg"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCode4"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_marginRight="9dp"
                android:text="2"
                android:textColor="@color/color_FFCF02"
                android:background="@drawable/google_input_code_bg"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCode5"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:layout_marginRight="9dp"
                android:text="2"
                android:textColor="@color/color_FFCF02"
                android:background="@drawable/google_input_code_bg"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCode6"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_FFCF02"
                android:background="@drawable/google_input_code_bg"
                android:layout_marginRight="30dp"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="44dp"/>
    </FrameLayout>
  </LinearLayout>

            <Button
                android:text="@string/google_confirm_open"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:background="@drawable/btn_enable_bg"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="44dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="@dimen/dp_60"
                android:textColor="@color/btn_enable_text_bg"
                android:enabled="true"
                android:id="@+id/okBtn"
                android:gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

